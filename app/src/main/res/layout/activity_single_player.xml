<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.et.fivekilled.SinglePlayerActivity"
    android:id="@+id/root"
    android:background="@drawable/brown8">
    <!--android:paddingLeft="@dimen/activity_horizontal_margin"-->
    <!--android:paddingRight="@dimen/activity_horizontal_margin"-->
    <!--android:paddingBottom="@dimen/activity_vertical_margin"-->

    <Helpers.fonts.InGameTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="00:00"
        android:id="@+id/timer"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gone"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/timer"
        android:layout_marginTop="37dp"
        android:textAlignment="center"
        android:background="@drawable/text_box"
        android:layout_margin="2dp"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gtwo"
        android:textAlignment="center"
        android:layout_below="@+id/timer"
        android:layout_toRightOf="@id/gone"
        android:layout_marginTop="37dp"
        android:background="@drawable/text_box"
        android:layout_margin="2dp"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gthree"
        android:layout_below="@+id/timer"
        android:layout_toRightOf="@id/gtwo"
        android:textAlignment="center"
        android:layout_marginTop="37dp"
        android:background="@drawable/text_box"
        android:layout_margin="2dp"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gfour"
        android:textAlignment="center"
        android:layout_below="@+id/timer"
        android:layout_toRightOf="@id/gthree"
        android:layout_marginTop="37dp"
        android:background="@drawable/text_box"
        android:layout_margin="2dp"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gfive"
        android:textAlignment="center"
        android:layout_below="@+id/timer"
        android:layout_toRightOf="@id/gfour"
        android:layout_marginTop="37dp"
        android:background="@drawable/text_box"
        android:layout_margin="2dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SUBMIT"
        android:id="@+id/btnSubmit"
        android:layout_alignBottom="@+id/gfive"
        android:layout_alignParentEnd="true"
        android:enabled="false"
        android:background="#8d6e63" />




    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sv"
        android:layout_below="@+id/gone"
        android:layout_above="@+id/keyPad">
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/hsv">
            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/display"
                android:columnCount="2">

            </GridLayout>
        </HorizontalScrollView>
    </ScrollView>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/keyPad"
        android:background="@android:color/transparent">

    </GridLayout>


</RelativeLayout>
