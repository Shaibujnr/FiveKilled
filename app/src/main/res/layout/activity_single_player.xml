<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.et.fivekilled.SinglePlayerActivity"
    android:id="@+id/root"
    android:background="#9e9d24">
    <!--android:paddingLeft="@dimen/activity_horizontal_margin"-->
    <!--android:paddingRight="@dimen/activity_horizontal_margin"-->
    <!--android:paddingBottom="@dimen/activity_vertical_margin"-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="00:00"
        android:id="@+id/timer"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gone"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/timer"
        android:layout_toStartOf="@+id/btnSubmit"
        android:layout_marginTop="37dp"
        android:background="@drawable/text_box"
        android:layout_margin="2dp"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gtwo"
        android:layout_below="@+id/timer"
        android:layout_toRightOf="@id/gone"
        android:layout_toStartOf="@+id/btnSubmit"
        android:layout_marginTop="37dp"
        android:background="@drawable/text_box"
        android:layout_margin="2dp"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gthree"
        android:layout_below="@+id/timer"
        android:layout_toRightOf="@id/gtwo"
        android:layout_toStartOf="@+id/btnSubmit"
        android:layout_marginTop="37dp"
        android:background="@drawable/text_box"
        android:layout_margin="2dp"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gfour"
        android:layout_below="@+id/timer"
        android:layout_toRightOf="@id/gthree"
        android:layout_toStartOf="@+id/btnSubmit"
        android:layout_marginTop="37dp"
        android:background="@drawable/text_box"
        android:layout_margin="2dp"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gfive"
        android:layout_below="@+id/timer"
        android:layout_toRightOf="@id/gfour"
        android:layout_toStartOf="@+id/btnSubmit"
        android:layout_marginTop="37dp"
        android:background="@drawable/text_box"
        android:layout_margin="2dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SUBMIT"
        android:id="@+id/btnSubmit"
        android:layout_alignBottom="@+id/gfive"
        android:layout_alignParentEnd="true" />



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnSubmit"
        android:id="@+id/sv">
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/hsv">
            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/display">

            </GridLayout>
        </HorizontalScrollView>
    </ScrollView>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/keyPad"
        android:rowCount="2"
        android:columnCount="7"
        android:background="#a1887f"
        android:layout_alignParentBottom="true">


    </GridLayout>

</RelativeLayout>
