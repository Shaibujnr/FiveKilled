<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">
    <Helpers.fonts.InGameTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quit game and go back to main menu??"
        android:id="@+id/bbd_dtxt"
        android:layout_gravity="center_horizontal"
        android:textStyle="normal"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="5dp"
        android:layout_centerHorizontal="true" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/bbd_dtxt"
        android:layout_alignParentStart="true">
        <Space
            android:layout_width="20px"
            android:layout_height="match_parent"
            android:layout_weight=".5"/>

        <Button

            style="?android:attr/buttonStyleSmall"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="YES"
            android:background="@drawable/dialog_edge"
            android:id="@+id/btn_bbd_yes"
            android:clickable="false"
            android:elevation="67dp"
            android:layout_weight=".4"/>

        <Space
            android:layout_width="20px"
            android:layout_height="match_parent"
            android:layout_weight=".5"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_margin="0dp"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="NO"
            android:background="@drawable/dialog_edge"
            android:id="@+id/btn_bbd_no"
            android:layout_weight=".4"
            />

        <Space
            android:layout_width="20px"
            android:layout_height="match_parent"
            android:layout_weight=".5"/>


    </LinearLayout>

</RelativeLayout>